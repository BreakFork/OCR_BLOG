{% extends 'base.html.twig' %}

{% block meta_description %}
    <meta name="description" content="Administration du blog OCR_BLOG : formulaire de connexion">
{% endblock %}

{% block title %}
    <title>Formulaire de connexion</title>
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-6 mx-auto">

                <article class="card mb-5 border-0">
                    <header class="card-header text-center">
                        <h1 class="card-title">Connexion Admin</h1>
                    </header>

                    <div class="card-body">

                        <div class="col-12 d-flex flex-column mb-4 mt-3">
                            <p class="text-justify text-center font-weight-bold pb-5">Cette page est réservée à l'administration du site.</p>
                        </div>

                        <div class="bg-light px-4 py-3" style="border-radius: 5px;">
                            <h4 class="mt-4 mb-5 text-center">Formulaire de connexion</h4>

                            {% if error %}
                                <p class="text-center text-justify text-danger font-weight-bold my-4">{{ error }}</p>
                            {% else %}
                                <p class="text-center text-justify font-weight-bold my-4">Veuillez renseigner vos identifiants.</p>
                            {% endif %}

                            <form class="d-flex flex-column" action="" method="post">
                                <div class="form-group">
                                    <label for="username">Nom d'utilisateur</label>
                                    <input type="text" class="form-control font-italic" name="username" id="username" placeholder="Nom d'utilisateur" required>
                                </div>

                                <div class="form-group">
                                    <label for="password">Mot de passe</label>
                                    <input type="password" class="form-control font-italic" name="password" id="password" placeholder="Mot de passe" required>
                                </div>

                                <button type="submit" class="btn btn-warning rounded-pill shadow mw-25 align-self-end" name="connection" value="Envoyer">Envoyer</button>

                            </form>
                        </div>
                    </div>
                </article><!-- /.card -->

            </div>
        </div>
    </div>

{% endblock %}
