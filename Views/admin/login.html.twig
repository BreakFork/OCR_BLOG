{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto">

                <article class="card mb-5">
                    <header class="card-header text-center">
                        <h1 class="card-title">Connexion Admin</h1>
                    </header>

                    <div class="card-body">

                        <div class="col-12 d-flex flex-column mb-4 mt-3">
                            <p class="text-justify text-center pb-5 border-bottom border-muted">Cette page est réservée à l'administration du site.<br>Veuillez renseigner vos identifiants.</p>
                        </div>

                        <h4 class="mt-5 mb-5 text-center">Formulaire de connexion</h4>

                        {% if error %}
                            <p class="text-center text-justify mt-3">{{ error }}</p>
                        {% endif %}

                        <form class="d-flex flex-column" action="" method="post">
                            <div class="form-group">
                                <label for="username">Nom d'utilisateur</label>
                                <input type="text" class="form-control" name="username" id="username" placeholder="Nom d'utilisateur">
                            </div>

                            <div class="form-group">
                                <label for="password">Mot de passe</label>
                                <input type="password" class="form-control" name="password" id="password" placeholder="Mot de passe">
                            </div>

                            <button type="button" class="btn btn-primary rounded-pill shadow w-25 align-self-end" name="connection" value="Envoyer">Envoyer</button>

                        </form>

                    </div>
                </article><!-- /.card -->

            </div>
        </div>
    </div>

{% endblock %}
