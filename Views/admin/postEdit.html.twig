{% extends 'base.html.twig' %}

{% block body %}
    <main class="main bg-white" role="main">

        <div class="container">

            <div class="row">
                <div class="col-sm-12">
                <form class="d-flex flex-column" action="" method="post" id="postForm">
                    <input type="hidden" name="postId" value="{% if postId %}{{ postId }}{% endif %}" />

                    <div class="text-center mb-4">
                        <h1 class="mb-5">{% if postId %}Édition d'article{% else %}Nouvel article{% endif %}</h1>
                        {% if message %}
                            <p class="text-center text-justify my-5">{{ message }}</p>
                        {% endif %}
                    </div>

                    {% if postId %}
                        <div class="d-flex justify-content-between mb-5">
                            <div>
                                <span class="font-weight-bold">Article</span><span>&nbsp;&nbsp;#{{ postId }}</span>
                            </div>
                            <div>
                                <span class="font-weight-bold">Dernière modification le : </span><span>{{ post.lastUpdateTimestamp|date("d/m/Y") }}</span>
                            </div>
                        </div>
                    {% endif %}

                    <div class="form-group">
                        <label for="title">Titre</label>
                        <input type="text" class="form-control form-control-lg" name="title" value="{% if postTitle %} {{ postTitle|trim }} {% endif %}" placeholder="Titre de l'article">
                    </div>

                    <div class="form-group">
                        <label for="route">Route</label>
                        <input type="text" class="form-control form-control-lg" name="route" value="{% if postRoute %} {{ postRoute|trim }} {% endif %}" placeholder="Route de l'article">
                    </div>

                    <div class="form-group">
                        <label for="author">Auteur</label>
                        <input type="text" class="form-control form-control-lg" name="author" value="{% if postAuthor %} {{ postAuthor|trim }} {% endif %}" placeholder="Auteur de l'article">
                    </div>

                    <div class="form-group">
                        <label for="content">Contenu</label>
                        <div class="editor">
                            <div class="js-editable text-justify" id="content">
                                {% if postContent %} {{ postContent|trim|raw }} {% endif %}
                            </div>
                        </div>
                    </div>

                    <input type="hidden" name="content" id="contentField" value="" />

                    <button type="submit" class="btn btn-warning rounded-pill shadow mw-25 align-self-end" name="publish" value="Publier">Publier</button>
                </form>
                </div>
            </div>
        </div>

    </main>

    <script language="JavaScript">
        $(document).ready(function() {
            $("#postForm").submit(function(event){
                $("#contentField").val($("#content").html());
            });
        });
    </script>
{% endblock %}
