{% extends 'base.html.twig' %}

{% block body %}

    <main class="main pt-4" role="main" xmlns="http://www.w3.org/1999/html">

        <h1 class="text-center mb-5 mt-4">Liste des articles</h1>

        <div class="container-fluid">
            {% for post in userPostList|reverse %}
            <div class="row">
                <div class="d-flex">
                    <article class="card py-4 px-5 min-vw-100 border-bottom-0">

                        <div class="border border-dark shadow mt-n3">

                            <header>
                                <div class="d-flex flex-column flex-sm-row justify-content-between px-3 text-white border-right border-left border-darkest bg-dark">

                                    <div class="card-meta mt-2 pt-1">
                                        <h4>{{ post.postTitle }}</h4>
                                    </div>

                                    <div class="card-meta my-sm-3 mb-3 mt-1">
                                        <span class="text-white-50 font-italic font-weight-bold">Publi√© le :&nbsp&nbsp;</span>{{ post.lastUpdateTimestamp|date("d/m/Y") }}
                                    </div>

                                </div>
                            </header>

                            <div class="h-50 pt-2 my-4 mx-5 text-justify">
                                {{ post.postContent|slice(0,250)|raw }}<span>...</span>
                            </div>

                            <div class="d-flex justify-content-between align-item-center py-2 px-3 bg-light">
                                <div class="card-meta">
                                    <span class="text-dark font-weight-bold">Auteur : {{ post.postAuthor }}</span>
                                </div>
                                <div>
                                    <a href="/post/{{ post.postRoute }}" class="mt-3 font-italic font-weight-bold text-primary text-uppercase">lire la suite&nbsp;&nbsp;<i class="fa fa-arrow-right font-weight-bold"></i></a>
                                </div>
                            </div>
                        </div>
                    </article><!-- /.card -->
                </div>
            </div><!-- row -->
            {% endfor %}
        </div>
    </main>

{% endblock %}
