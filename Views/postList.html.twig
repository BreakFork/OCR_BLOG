{% extends 'base.html.twig' %}

{% block meta_description %}
    <meta name="description" content="Liste des articles du blog OCR_BLOG">
{% endblock %}

{% block title %}
    <title>Liste des articles</title>
{% endblock %}

{% block body %}

    <main class="main pt-4" role="main" xmlns="http://www.w3.org/1999/html">

        <h1 class="text-center mb-5 mt-4">Liste des articles</h1>

        <div class="container">
            <div class="row py-4" >
            {% for post in userPostList %}
                <div class="col-12 col-md-6 mb-5">

                    <article class="d-flex flex-column justify-content-between border border-dark shadow mb-1 h-100">
                        <header class="d-flex flex-column flex-lg-row justify-content-between px-3 text-white border-right border-left border-darkest bg-dark">
                            <div class="card-meta mt-2 pt-1">
                                <h4>{{ post.postTitle }}</h4>
                            </div>

                            <div class="card-meta my-sm-3 mb-3 mt-1">
                                <span class="text-white-50 font-italic font-weight-bold">Publi√© le :&nbsp&nbsp;</span>{{ post.lastUpdateTimestamp|date("d/m/Y") }}
                            </div>
                        </header>

                        <div class=" pt-2 my-4 mx-5 text-justify">
                            {{ post.postContent|slice(0,250)|raw }}<span>...</span>
                        </div>

                        <div class="d-flex justify-content-between align-item-center py-0 px-3 bg-light border-dark border-top">
                            <div class="mt-2 card-meta">
                                <span class="text-dark font-weight-bold">Auteur : {{ post.postAuthor }}</span>
                            </div>
                            <div>
                                <a href="/post/{{ post.postRoute }}" class="nav-link font-italic font-weight-bold text-primary text-uppercase">lire la suite&nbsp;&nbsp;<i class="fa fa-arrow-right font-weight-bold"></i></a>
                            </div>
                        </div>
                    </article>

                </div>
            {% endfor %}
            </div><!-- row -->
        </div>
    </main>

{% endblock %}
