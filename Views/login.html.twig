{% extends 'base.html.twig' %}

{% block meta_description %}
    <meta name="description" content="Administration du blog OCR_BLOG : formulaire de connexion">
{% endblock %}

{% block title %}
    <title>Formulaire de connexion</title>
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto">

                <article class="card mb-5 border-0">
                    <header class="card-header text-center">
                        <h1 class="card-title mb-4">CONNEXION</h1>
                    </header>

                    <div class="card-body bg-light mb-4" style="border-radius: 10px;">
                        {% if signInErrorMessage %}
                            <p class="text-center text-justify mt-3 mb-4">{{ error }}</p>
                        {% else %}
                            <p class="text-primary font-weight-bold mt-3 mb-4">Veuillez renseigner vos identifiants.</p>
                        {% endif %}

                        <form class="d-flex flex-column" action="" method="post">
                            <div class="form-group">
                                <label for="pseudo">Pseudo</label>
                                <input type="text" class="form-control font-italic" name="pseudo" id="pseudo" placeholder="Votre pseudo" required>
                            </div>

                            <div class="form-group">
                                <label for="password">Mot de passe</label>
                                <input type="password" class="form-control font-italic" name="password" id="password" placeholder="Mot de passe" required>
                            </div>

                            <button type="submit" class="btn btn-primary rounded-pill shadow mt-1 mw-25 align-self-end" name="connection" value="Envoyer">Envoyer</button>
                        </form>
                    </div>


                    <div class="card-body d-flex flex-column justify-content-center bg-light mt-5" style="border-radius: 10px;">
                        <div class="d-flex flex-column flex-md-row justify-content-center align-items-center px-3 mt-2">
                            <i class="fas fa-user-plus fa-2x mb-4 mb-md-0"></i>
                            <span class="font-weight-bold pl-md-4" style="font-size: 1.5em;">Vous n'avez pas de compte ?</span>
                        </div>

                        <p class="mt-4 mb-5 px-2 text-justify">N'hésitez pas à vous inscrire, cela ne prends que quelques secondes...</p>

                        {% if signUpErrorMessage %}
                            <p class="text-center text-justify mb-4">{{ error }}</p>
                        {% else %}
                            <p class="text-primary font-weight-bold mb-4">Veuillez renseigner tous les champs.</p>
                        {% endif %}

                        <form class="d-flex flex-column" action="" method="post">
                            <div class="form-group">
                                <label for="visitorEmail">Email</label>
                                <input type="email" class="form-control font-italic" name="visitorEmail" id="visitorEmail" placeholder="Votre adresse email" required>
                            </div>

                            <div class="form-group">
                                <label for="visitorPseudo">Pseudo</label>
                                <input type="text" class="form-control font-italic" name="visitorPseudo" id="visitorPseudo" placeholder="Votre pseudo" required>
                            </div>

                            <div class="form-group">
                                <label for="visitorPassword">Mot de passe</label>
                                <input type="password" class="form-control font-italic" name="visitorPassword" id="visitorPassword" placeholder="Mot de passe" required>
                            </div>

                            <button type="submit" class="btn btn-primary rounded-pill shadow mt-1 mw-25 align-self-end" name="connection" value="Envoyer">s'incrire</button>
                        </form>

                    </div>
                </article><!-- /.card -->

            </div>
        </div>
    </div>

{% endblock %}